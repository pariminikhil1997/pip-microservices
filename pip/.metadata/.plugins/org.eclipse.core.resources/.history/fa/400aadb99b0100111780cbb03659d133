package com.java.pip.config;

@Configuration
@EnableCaching
public class CacheConfig {

	@Bean
    public CacheManager cacheManager() {
        CaffeineCacheManager manager =
                new CaffeineCacheManager("products", "users");

        manager.setCaffeine(
            Caffeine.newBuilder()
                    .expireAfterWrite(5, TimeUnit.MINUTES)
                    .maximumSize(1000)
        );

        return manager;
    }
}